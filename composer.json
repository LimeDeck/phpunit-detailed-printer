{
    "name": "limedeck/phpunit-detailed-printer",
    "description": "Formatter for the detailed output of PHPUnit tests.",
    "license": "ISC",
    "authors": [
        {
            "name": "LimeDeck",
            "email": "mail@limedeck.io"
        }
    ],
    "require": {
        "phpunit/phpunit": "~9.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "LimeDeck\\Testing\\": "src/"
        }
    },
    "scripts": {
      "cs:check": "vendor/bin/php-cs-fixer fix --verbose --ansi --show-progress=estimating --diff --dry-run",
      "cs:fix": "vendor/bin/php-cs-fixer fix --verbose --ansi --show-progress=estimating"
    },
    "minimum-stability": "stable"
}
